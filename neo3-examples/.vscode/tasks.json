{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-contract",
            "command": "./gradlew",
            "type": "shell",
            "args": [
                "neow3jCompile"
            ],
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "compile-contract-with-className",
            "command": "./gradlew",
            "type": "shell",
            "args": [
                // disable warnings, show errors only
                "--quiet",
                // specify a system property
                "-P",
                { 
                    "value": "className=${input:className}",
                    "quoting": "weak"
                },
                "neow3jCompile"
            ],
            "problemMatcher": [
                "$gradle"
            ]
        },
        {
            "label": "transfer-NEO-from-Alice-to-Bob",
            "command": "nxp3",
            "type": "shell",
            "args": [
                "transfer",
                "NEO",
                "1000",
                "Alice",
                "Bob"
            ]
        },
        {
            "label": "transfer-GAS-from-Alice-to-Bob",
            "command": "nxp3",
            "type": "shell",
            "args": [
                "transfer",
                "GAS",
                "1000",
                "Alice",
                "Bob"
            ]
        },
        {
            "label": "nxp3-reset",
            "command": "nxp3",
            "type": "shell",
            "args": [
                "reset"
            ]
        },
        {
            "label": "nxp3-stop",
            "command": "nxp3",
            "type": "shell",
            "args": [
                "stop"
            ]
        }
    ],
    "inputs": [
        {
            "id": "className",
            "description": "Fully qualified class name (e.g., 'io.neow3j.examples.contractdev.contracts.BongoCatToken')",
            "default": "io.neow3j.examples.contractdev.contracts.BongoCatToken",
            "type": "promptString"
        }
    ]
}